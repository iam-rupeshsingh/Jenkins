pipeline {
  agent { label 'docker-agent' }
  stages {
    stage('Run on agent') {
      steps {
        sh 'hostname'
        sh 'whoami'
      }
    }
  }
}
-----------------

pipeline {
  agent {
    docker {
      image 'alpine:3.20'
      label 'docker-agent'
      args '-u root:root'
    }
  }
  stages {
    stage('Inside container') {
      steps {
        sh 'cat /etc/os-release'
        sh 'echo "Running on: $NODE_NAME"'
      }
    }
  }
}

